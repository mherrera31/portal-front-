        tbody tr:hover { background-color: #f8fafc; }
        #loading { text-align: center; padding: 40px; font-weight: 600; color: #64748b; }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
